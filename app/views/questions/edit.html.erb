<%= bootstrap_form_for @question, :url => "/questions/#{@question.id}/edit", :method => :post do |f| %>
  <%= f.select :book_id, Book.all.collect {|b| [ b.title, b.id ] } %>
  <%= f.text_area :question %>
  <%= f.text_area :answer %>
  <%= f.number_field :page, :min => 1, :step => 1 %>
  <%= f.check_box :starred %>
  <br>
  <%= f.submit 'Save', :method => :post, :class => "btn btn-primary" %>
<% end %>