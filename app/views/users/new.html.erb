<div class="col-sm-5 form-group">
  <h1><%= @create_admin ? 'Create Admin Account' : 'Create An Account' %></h1>
  <%= bootstrap_form_for :account do |form| %>
    <%= form.hidden_field :user_type, :value => @create_admin ? 'instructor' : 'student' %>
    <%= form.email_field :email, class: "input-md" %>
    <%= form.text_field :username, class: "input-md" %>
    <%= form.password_field :password, class: "input-md" %>
    <%= form.password_field :confirm_password, class: "input-md" %>
    <%= form.text_field :first_name, class: "input-md"  %>
    <%= form.text_field :last_name, class: "input-md" %>
    <%= form.submit "Create Account", class: "btn btn-block btn-md btn-primary" %>
  <% end %>
</div>